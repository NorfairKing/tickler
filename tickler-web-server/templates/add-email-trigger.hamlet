  <p .title .is-size-4>
    Add Email Trigger

  <form .form
    method=post
    action=@{TriggerAddEmailR}>

    <div .field .is-horizontal>
      <label .label>
        Email Address
      <input .input
        type="email" 
        name="email-address" 
        autofocus>
    ^{token}
    
    <button .button #submit-email .is-primary type="submit">
      Create Email Trigger
